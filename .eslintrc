{
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "flowtype"
    ],
    "rules": {
        "semi": ["error", "always"],
        "object-curly-spacing": ["error", "never"],
        "sort-imports": ["error", {
            "ignoreDeclarationSort": true
        }]
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:flowtype/recommended"
    ],
    "env": {
        "browser": true,
        "node": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}